{
  "extends": "@repo/typescript-config/base.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "strict": true,
    "paths": {
      "@cascade/core": ["./src/index.ts"],
      "@cascade/core/unstable-core-DO-NOT-IMPORT": [
        "./src/unstable-core-DO-NOT-IMPORT/index.ts"
      ],
      "@cascade/core/adapters/*": ["./src/adapters/*"]
    }
  }
}
